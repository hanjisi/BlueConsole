<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BlueConsole.Views.ConPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    Title="ConPage">
    <!--  页面主布局  -->
    <Grid RowDefinitions="*,Auto">

        <!--  ================= 日志区域 =================  -->
        <CollectionView
            x:Name="LogList"
            Grid.Row="0"
            ItemsSource="{Binding Logs}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label
                        Margin="6,2"
                        FontFamily="Consolas"
                        FontSize="12"
                        LineBreakMode="CharacterWrap"
                        Text="{Binding DisplayText}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>



        <!--  ================= 操作面板（推挤式） =================  -->
        <Border
            x:Name="ActionPanel"
            Grid.Row="1"
            BackgroundColor="White"
            IsVisible="False"
            Stroke="#DDD"
            StrokeThickness="1">

            <Grid RowDefinitions="Auto,*">

                <!--  面板头  -->
                <Grid Padding="12" BackgroundColor="#F5F5F5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="调试操作" />
                </Grid>

                <!--  操作按钮（可滚动）  -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="12" Spacing="8">

                        <Button Text="开始采集" />
                        <Button Text="停止采集" />
                        <Button Text="设备复位" />
                        <Button Text="发送测试指令" />
                        <Button Text="查询状态" />
                        <Button Text="导出日志" />

                        <!--  模拟很多按钮  -->
                        <Button Text="高级操作 1" />
                        <Button Text="高级操作 2" />
                        <Button Text="高级操作 3" />

                    </VerticalStackLayout>
                </ScrollView>

            </Grid>
        </Border>

    </Grid>

</ContentPage>